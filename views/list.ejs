<%- include("header") -%>

  <div id="heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>


<!-- Look out for changes in this block by comparing previous to-do-list -->
  <div class="box">
    <% newListItems.forEach((item)=>{ %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" value="<%= item._id %>" name="checkbox" onchange="this.form.submit()">
          <p>
            <%= item.name %>
          </p>
        </div>
        <input type="hidden" value="<%= listTitle %>" name="listName">
      </form>
      <% }) %>


      <!-- checkout the value attribute in the button and input tags -->

        <form class="item" action="/" method="post">
          <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
          <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
  </div>

  <%- include("footer") -%>